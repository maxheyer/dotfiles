[colors]
fg = #222222
fgdis = #696969
bgtime = #dba0bb
bgcoreinfo = #92aee8
bgwm = #a78371
bgwmf = #c9a593
bgtray = #5b3542
alert = #f99157
tp = #00000000

[bar/top]
width = 100%
height = 30
enable-ipc = true

background = ${colors.tp}
foreground = ${colors.fg}

bottom = false
border-top-color = ${colors.tp}
border-left-color = ${colors.tp}
border-right-color = ${colors.tp}
border-top-size = 10
border-left-size = 17
border-right-size = 17

module-margin-left = 0
module-margin-right = 0
padding-left = 0
padding-right = 1

font-0 = RobotoMono:pixelsize=10;1
font-1 = RobotoMono Nerd Font:pixelsize=10;2
font-2 = Font Awesome 5 Free:pixelsize=10;4

modules-left = bspwm
modules-right = time volume dunst temperature cpu memory battery

wm-restack = bspwm

tray-position = right
tray-background = ${colors.bgtray}

[module/time]
type = internal/date
interval = 1

time = "%a %d-%m %H:%M  "
format-prefix = "  "

format-background = ${colors.bgtime}
format-font = 2

label = %time%
format-margin = 1

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
format-font = 2

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = "  "

label-volume = "%percentage%% "
label-muted = "  %percentage%% "
label-muted-foreground = ${colors.fgdis}

format-volume-background = ${colors.bgcoreinfo}
format-muted-background = ${colors.bgcoreinfo}

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
pin-workspaces=true
format-font = 2

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;0
ws-icon-default = +

label-mode-padding = 0
label-mode-foreground = ${colors.fg}
label-mode-background = ${colors.alert}

label-focused = %icon%
label-focused-background = ${colors.bgwmf}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-background = ${colors.bgwm}
label-occupied-padding = 2

label-empty = %icon%
label-empty-background = ${colors.bgwm}
label-empty-padding = 2

label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

format-margin = 1

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-font = 2
format-warn = <ramp> <label-warn>
format-background = ${colors.bgcoreinfo}

label = "%temperature-c% "
label-warn = "%temperature-c% "
label-warn-foreground = ${colors.alert}

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "

[module/cpu]
type = internal/cpu

interval = 2
format-prefix = " CPU "
format-font = 2
format-background = ${colors.bgcoreinfo}
label = "%percentage:2%% "

[module/memory]
type = internal/memory
interval = 2
format-prefix = " RAM "
format-font = 2
format-background = ${colors.bgcoreinfo}
label = "%percentage_used%% "

[module/dunst]
type = custom/ipc
initial = 1
format-background = ${colors.bgcoreinfo}
format-font = 2

hook-0 = echo " %{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}%{A} " &
hook-1 = echo " %{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}%{A} " &

[settings]
screenchange-reload = true
